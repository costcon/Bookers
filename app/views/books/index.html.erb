<!DOCTYPE html>
<html>
  <body>
    <p id="notice"></p>
    <h1 class="index-title">Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"> </th>
        </tr>
      </thead>
      <tbody>
        <div class="book-box">
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id) %><td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
          </tr>
          <% end %>
        </div>
      </tbody>
    </table>
    <h2>New book</h2>
    <%= form_with model:@newbook, local:true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <p>Title</p>
      <%= f.text_field :title %>

      <p>body</p>
      <%= f.text_area :body %><br>

      <%= f.submit 'Create Book' %>

    <% end %>

  </body>
</html>