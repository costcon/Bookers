<!DOCTYPE html>
<html>
  <body>
    <p id="notice"></p>
    <h1>books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <tbody>
      <div class="book-box">
        <% @books.each do |book| %>
          <%= book.title %>
          <%= book.body %>
          <%= link_to "show", show_books_path(@book) %>
          <%= link_to "edit", edit_books_path(@book) %>
          <%= link_to "destroy", books_path(@book), method: :delete %>
        <% end %>
      </div>
    </tbody>
    </table>
    <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>body</h4>
      <%= f.text_field :body %>

      <%= f.submit 'Create Book' %>

    <% end %>

  </body>
</html>