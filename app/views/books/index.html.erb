<!DOCTYPE html>
<html>
  <body>
    <p id="notice"></p>
    <h1 class="index-title">Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"> </th>
        </tr>
      </thead>
      <tbody>
        <div class="book-box">
          <% @book.each do |book| %>
            <%= book.title %>
            <%= book.body %>
            <%= link_to "show", book_path(book.id) %>
            <%= link_to "edit", edit_book_path(book.id) %>
            <%= link_to "destroy", book_path(book.id), method: :delete %>
          <% end %>
        </div>
      </tbody>
    </table>
    <h2>New book</h2>
    <%= form_with model:@newbook, local:true do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>body</h4>
      <%= f.text_field :body %>

      <%= f.submit 'Create Book' %>

    <% end %>

  </body>
</html>