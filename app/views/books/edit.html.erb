<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book' %><br>


  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>


<% end %>
